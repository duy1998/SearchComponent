<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:background="@drawable/search_box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="7dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_search_in_field"/>

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#f0f1f5"
            android:fontFamily="@font/sfui_text_semibold"
            android:hint="@string/search_find_name_id"
            android:textSize="11.5sp"
            tools:ignore="SmallSp"/>

        <ImageView
            android:id="@+id/doneImage"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_margin="7dp"
            android:layout_weight="0"
            android:src="@mipmap/ic_search_in_field_delete"
            android:visibility="invisible"
            tools:ignore="NestedWeights"/>
    </LinearLayout>

    <TextView
        android:id="@+id/exitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/white"
        android:fontFamily="@font/sfui_text_bold"
        android:padding="20dp"
        android:text="@string/search_done_edit_text"/>

</LinearLayout>