<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/connectionFailedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        tools:visibility="visible"
        android:visibility="gone"
        android:focusable="true">

    <!-- Network icon -->
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_empty_wifi"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/textEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/connection_failed_messages"
            android:textColor="@color/network_notification"
            android:textSize="18sp"
            android:fontFamily="@font/sfui_text_medium"/>

    <!-- Retry button -->
    <Button
            android:id="@+id/retryButton"
            android:layout_width="124dp"
            android:layout_height="42dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/connection_failed_button_background"
            android:clickable="true"
            android:text="@string/retry"
            android:textAllCaps="false"
            android:textColor="@color/color_4d4d4d"
            android:textSize="14sp"
            android:fontFamily="@font/sfui_text_medium"
            android:focusable="true"/>

</LinearLayout>